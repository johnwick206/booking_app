<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminEventDetails"
    android:background="@mipmap/bg14">



        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hall Booking Seminar"
            android:textColor="#05786E"
            android:textSize="27sp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/organizerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="30dp"
            android:text="Organizer"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_below="@id/name"
            android:layout_marginTop="50dp"
            android:background="@drawable/white_round_bg"
            android:textColor="#000"/>


    <RelativeLayout
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/white_round_bg"
        android:gravity="center"
        android:layout_below="@id/organizerName">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Category"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/actualcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:text="Seminar Hall"
            android:textSize="22sp"
            android:textColor="#000" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="149dp"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/white_round_bg"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/roomno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Room No."
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/actualroomno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="M-101"
            android:textSize="22sp"
            android:textColor="#000"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="149dp"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/white_round_bg"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Date"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/actualdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/date"
            android:text="02-12-2020"
            android:textSize="22sp"
            android:textColor="#000"/>

    </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20sp"
        android:background="@drawable/white_round_bg"
        android:gravity="center"
        android:layout_below="@id/linearLayout"
        android:paddingVertical="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Slot"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/actualslot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="9am-12pm"
            android:textSize="22sp"
            android:textColor="#000"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/white_round_bg"
        android:gravity="center"
        android:layout_below="@id/slot"
        android:paddingVertical="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Contact"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/actualcontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="example@gmail.com"
            android:textSize="22sp"
            android:textColor="#000"/>

    </RelativeLayout>

</RelativeLayout>