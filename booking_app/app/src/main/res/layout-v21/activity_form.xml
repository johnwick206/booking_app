<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.FormActivity"
    android:background="@mipmap/page_bg">

    <TextView
        android:id="@+id/RoomName"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:transitionName="cardTransition2"
        android:background="@mipmap/titlebar" />

    <RelativeLayout
        android:id="@+id/detailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RoomName"
        android:background="@drawable/white_round_bg"
        android:layout_margin="20sp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">
        <CheckBox
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9am-12pm"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12pm-3pm"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3pm-6pm"
            android:layout_weight="1"/>
                </LinearLayout>

        <EditText
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="Title"
            android:layout_below="@id/linearLayout"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20sp"
            android:ems="10"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/descriptionBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="5"
            android:layout_marginHorizontal="20sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/title1"
            android:layout_marginTop="20dp"
            android:hint="Description of Seminar"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:background="@drawable/white_round_bg"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"/>

        <EditText
            android:id="@+id/organizingBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/descriptionBox"
            android:layout_marginTop="20dp"
            android:hint="Organizer"
            android:paddingVertical="15dp"
            android:inputType="textPersonName"
            android:paddingHorizontal="15dp"/>

        <EditText
            android:id="@+id/audienceNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_below="@id/organizingBody"
            android:hint="Expected Audience No."
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:ems="10"
            android:inputType="number"
            android:paddingVertical="15dp"
            android:paddingHorizontal="15dp"/>

                <TextView
                    android:id="@+id/splReqTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/audienceNo"
                    android:layout_marginTop="20sp"
                    android:text="Special Requirements"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/splRequirement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="5"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/splReqTitle"
            android:layout_marginTop="5sp"
            android:layout_marginHorizontal="20sp"
            android:hint="Special Requirements"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:background="@drawable/white_round_bg"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"/>

        <Button
            android:id="@+id/bookSeminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:layout_below="@id/splRequirement"
            android:text="Book"
            android:background="@drawable/blue_btn"
            android:paddingHorizontal="40dp"
            android:textColor="#fff"/>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>