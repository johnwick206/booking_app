<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormActivity"
    android:background="@mipmap/page_bg">

    <TextView
        android:id="@+id/RoomName"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:transitionName="cardTransition2"
        android:background="@mipmap/titlebar" />

    <RelativeLayout
        android:id="@+id/detailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RoomName"
        android:background="@drawable/date_name_bg"
        android:layout_margin="20sp">

        <CheckBox
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="9am-12pm" />

        <CheckBox
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="15dp"
            android:text="12pm-3pm" />

        <CheckBox
            android:id="@+id/time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="15dp"
            android:text="3pm-6pm" />

        <EditText
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="Title"
            android:layout_marginTop="65dp"
            android:layout_marginHorizontal="20sp"
            android:ems="10"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/descriptionBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="5"
            android:layout_marginHorizontal="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="125dp"
            android:hint="Description of Seminar"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:background="@drawable/date_name_bg"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"/>

        <EditText
            android:id="@+id/organizingBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/descriptionBox"
            android:layout_marginTop="20dp"
            android:hint="Organizer"
            android:paddingVertical="15dp"
            android:inputType="textPersonName"
            android:background="@drawable/date_name_bg"
            android:paddingHorizontal="15dp"/>

        <EditText
            android:id="@+id/audienceNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_below="@id/organizingBody"
            android:hint="Expected Audience No."
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:ems="10"
            android:inputType="number"
            android:background="@drawable/date_name_bg"
            android:paddingVertical="15dp"
            android:paddingHorizontal="15dp"/>

        <EditText
            android:id="@+id/splRequirement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="5"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/audienceNo"
            android:layout_marginTop="20sp"
            android:layout_marginHorizontal="20sp"
            android:hint="Special Requirements"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:background="@drawable/date_name_bg"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"/>

        <Button
            android:id="@+id/bookSeminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:layout_below="@id/splRequirement"
            android:text="Book"
            android:background="@drawable/blue_btn"
            android:paddingHorizontal="40dp"
            android:textColor="#fff"/>

    </RelativeLayout>

</RelativeLayout>